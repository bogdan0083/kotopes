.mobile-menu
    background-color white
    color black
    width 200px
    padding 20px
    position fixed
    left 0
    top 0
    min-height 100%
    overflow auto
    transition transform 0.3s
    transform translateX(-100%)
    &.active
        transform translateX(0)
    +above(880px)
        display none
    a, span
        font-weight 700
        text-transform uppercase
        text-decoration none
        display block
        margin 10px 0
        font-size 1.3rem
        &:first-child
            margin-top 0
    span
        color white


.field
    height: 40px
    display: block
    width: 100%
    padding-left: 20px
    padding-right: 20px
    margin: 0 auto
    background-color: #fdfcfc
    border: 1px solid #dfdfdf
    &-text
        resize none
        height: 100px
        padding-top: 10px
    &:focus
        border-color: gray
        outline none

.amount-input
    width 70px
    height 40px
    text-align center
    position relative
    &-sub, &-add
        top 50%
        margin-top: -11px
        left 6px
        border none
        position absolute
        transition all 0.3s
        opacity: 0.5
        &:hover
            opacity: 1
        &:focus
            outline none
    &-add
        left auto
        right 6px
    .field
        width 100%
        height 40px
        text-align center
        padding 0
        padding-left: 25px
        padding-right: 25px
        box-sizing border-box

.section-title
    position: relative
    overflow: hidden
    &-link
        float: right
        margin-top: 26px
        background-color: #fdfdfd
        position: relative
        z-index: 2
        display: inline-block
        text-decoration: none
        padding-left: 20px
        span
            border-bottom: 1px dotted pink
    +above($screen-sm)
        padding-left: 40px
        .icon
            position: absolute
            left 0
            top 50%
            transform translateY(-50%)

.section-heading
    font-size: 1.3rem
    text-transform: uppercase
    font-weight: 300
    line-height: 1.4
    +above($screen-sm)
        font-size: 1.7rem
        span
            position: relative
            display: inline-block
            &:after
                content ''
                height: 1px
                width: 1200px
                background-color: #f1f1f1
                position: absolute
                transform translateX(100%)
                right -20px
                top 50%
                margin-top: -1px


.fadeInUp
