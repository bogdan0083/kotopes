html
    box-sizing border-box
    font-size 13px
    +above(880px)
        font-size 14px
        min-height 100%
        position relative
*, *:before, *:after
    box-sizing inherit


generateClasses($spritesheet_sprites)

body
    color black
    font-size 1rem
    font-family 'Lato', sans-serif
    font-weight 300
    background-color: #fdfdfd
    +above($screen-sm)
        margin-bottom: 214px
    +above($screen-md)
        margin-bottom: 226px
a
    text-decoration underline
    color $pink
    transition all 0.3s
    &:hover
        color black
        text-decoration none

.colored-pink
    color $pink

.colored-gray
    color $gray

a.colored-pink
    transition all 0.3s
    &:hover
        color $pink-dark

a.colored-gray
    transition all 0.3s
    &:hover
        color $black
.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

.i-cross
    &:before
        sprite($cross_hover)

.i-cart-pink
    &:before
        sprite($cart_pink_hover)

.i-smartphone
    &:before
        sprite($smartphone_hover)

.i-dog-small
    &:before
        sprite($dog_small_hover)

.i-cat-small
    &:before
        sprite($cat_small_hover)
    &-pink
        sprite($cat_small_hover)
.i-fish-small
    &:before
        sprite($fish_small_hover)
    &-pink
        sprite($fish_small_hover)
.i-parrot-small
    &:before
        sprite($parrot_small_hover)
    &-pink
        sprite($parrot_small_hover)
.i-mouse-small
    &:before
        sprite($mouse_small_hover)
    &-pink
        sprite($mouse_small_hover)
.i-turtle-small
    &:before
        sprite($turtle_small_hover)
    &-pink
        sprite($turtle_small_hover)

img
    max-width 100%

.nav-trigger-wrap
    width: 30px
    height: 30px
    background-color: #f6f6f6
    border-radius 50%
    text-align: center
    float: left
    margin-right: -30px
    margin-top: 3px

.nav-trigger
    margin: 0 auto
    hamburger-generator(18px, 1px, 5px)
    text-align center
    margin-top 15px
    position relative
    z-index 10
    &.active
        hamburger-animation()
    +above(880px)
        display none

.page-wrapper
    transition all 0.3s
    &.active
        transform translateX(200px)
.container
    padding 0 10px
    +above($screen-sm)
        padding: 0 15px

