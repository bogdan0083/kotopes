/* =====================================================================================================================
// Skin details */

.irs {
    height: 65px;
}
.irs-with-grid {
    height: 75px;
}
.irs-line {
    height: 10px; top: 33px;
    width 100%
    background-color: #dfdfdf
}
    .irs-line-left {
        height: 5px;
    }
    .irs-line-mid {
        height: 5px;
    }
    .irs-line-right {
        height: 5px;
    }

.irs-bar {
    height: 10px; top: 33px;
    background: #fdfcfc;
    border 1px solid #dfdfdf
}
    
    .irs-bar-edge {
        height: 10px; top: 33px;
        width: 14px;
        border: 1px solid #428bca;
        border-right: 0;
        background: #428bca;
        background: linear-gradient(to top, rgba(66,139,202,1) 0%,rgba(127,195,232,1) 100%); /* W3C */
        border-radius: 16px 0 0 16px;
        -moz-border-radius: 16px 0 0 16px;
    }

.irs-shadow {
    height: 2px; top: 38px;
    background: #000;
    opacity: 0.3;
    border-radius: 5px;
    -moz-border-radius: 5px;
}
.lt-ie9 .irs-shadow {
}

.irs-slider {
    top: 27px;
    width: 20px; height: 20px;
    background: white;
    cursor: pointer;
    border-radius 50%
    border 1px solid $pink
    box-shadow 0 0 1px 1px white
    &:before {
        content ''
        width: 6px
        height: 6px
        background-color: #fff
        position: absolute
        margin-left: -3px
        margin-top: -3px
        border-radius 50%
        border 1px solid $pink
        top 50%
        left 50%
    }
}

