.header .categories-nav-small
    border-top: 1px solid #f1f1f1
    a
        height auto
        padding-bottom: 5px
        +above($screen-sm)
            height 40px
            padding-bottom: 0

.categories-nav-small
    +above($screen-sm)
        &:before, &:after
            display: none
            background: none
    clearfix()
    a
        padding-top: 5px
        height: 40px
        border-top: 0
        +above($screen-sm)
            padding-top: 5px
            height: 40px
            padding-left: 15px
        &:hover .caption, &.active .caption
            color $pink
        &:after
            height: 20px
            margin-top: -10px
        .icon-wrap
            display: inline-block
            position: relative
            .icon
                position: absolute
                left 50%
                top 50%
                transform translate(-50%, -50%)
            +above($screen-sm)
                width: 30px
                height: 30px
                background-color: #f6f6f6
                vertical-align: middle
                &:before
                    display: none
        .caption
            transition all 0.3s
            +above($screen-sm)
                display: inline-block
                vertical-align: middle
                margin-left: 30px
                margin-top: 1px
    a
        +above($screen-sm)
            padding-left: 10px
            .caption
                +above($screen-sm)
                    margin-left: 13px
                +above($screen-md)
                    margin-left: 35px
.btn
    width: 170px
    text-align: center
    text-decoration: none
    background-color: #f9f9f9
    transition all 0.3s
    display: inline-block
    height: 40px
    line-height: 40px
    border none
    color black
    &:hover
        background-color: darken(#f9f9f9, 10%)
    &-pink
        background-color: $pink
        color white
        &:hover
            background-color: $pink-dark
            color white
    &-full
        width: 100%
    &-gray
        background-color: #8c8c8c
        color white
        &:hover
            color white
            background-color: black
    &-cart
        width: 140px
        text-align: left
        padding-left: 15px
        line-height: 40px
        vertical-align: middle
        .icon
            margin-right: 20px
    &-wide
        width: 240px
        &.btn-cart
            .icon
                margin-right: 35px

.moveUp, .moveLeft, .moveRight, .moveDown
    transition all 0.3s

.moveUp
    transform translateY(-100px)

.moveLeft
    transform translateX(-100px)
    transition-delay 0.2s

.moveRight
    transform translateX(100px)
    transition-delay 0.3s

.moveDown
    transform translateY(100px)
    transition-delay 0.1s

.phone-block:hover, .cart-block:hover
    .icon:before
        opacity: 1


