    padding-bottom: 20px
    overflow: hidden

.contact-left
    line-height: 1.4

.contact-form
    margin-top: 30px
    +above($screen-sm)
        margin-top: 0
    h4
        text-align: center
        font-weight: 400
        margin-bottom: 0
        margin-top: 0
    .field
       margin 20px 0

.map-wrapper
    height: 350px
    margin-bottom: -20px
