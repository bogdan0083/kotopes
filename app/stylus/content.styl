    .error-fly
        position: relative
        padding 30px 40px 0
        margin-bottom: 20px
        +above($screen-sm)
            display: block
            animation LeftToTop 10s infinite linear
            position: absolute
            left 0
            top 30px
        .wing
            position: absolute
            &-left
                left 20px
                top 10px
                transform-origin 100% 100%
                animation wingLeft 1s infinite
                +above($screen-sm)
                    left 0
                    top 0
            &-right
                right 20px
                top 10px
                transform-origin 0 100%
                animation wingRight 1s infinite
                +above($screen-sm)
                    right 0
                    top 0


@keyframes wingLeft
    0%
        transform rotate(0)
    50%
        transform rotate(-45deg)
    100%
        transform rotate(0)

@keyframes wingRight
    0%
        transform rotate(0)
    50%
        transform rotate(45deg)
    100%
        transform rotate(0)

@keyframes LeftToTop
    0%
        transform translateX(0)
    50%
        transform translateX(900px)
    100%
        transform translateX(0)


