                margin-top: 0
                margin-bottom: 15px
    .slide-background
        position: absolute
        left -5%
        top -5%
        width: 110%
        height: 110%
        transition all 0.3s
        transform translateZ(0)
        &.blurred
            filter blur(3px)
    &-block
        position: relative
        display: table
        text-align: center
        color white
        .inner
            display: table-cell
            vertical-align: middle
            position: relative
            z-index: 2
            padding 10px 20px
